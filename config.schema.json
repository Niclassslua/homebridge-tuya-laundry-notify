{
  "pluginAlias": "TuyaLaundryNotify",
  "pluginType": "platform",
  "singular": true,
  "schema": {
    "type": "object",
    "properties": {
      "accessId": {
        "title": "Access ID",
        "type": "string",
        "required": true,
        "description": "Tuya API Access ID"
      },
      "accessKey": {
        "title": "Access Key",
        "type": "string",
        "required": true,
        "description": "Tuya API Access Key"
      },
      "countryCode": {
        "title": "Country Code",
        "type": "string",
        "required": true,
        "description": "Country code for your region (e.g., 49 for Germany)"
      },
      "endpoint": {
        "title": "Endpoint URL",
        "type": "string",
        "required": true,
        "description": "Endpoint URL of the data center where the cloud project resides (e.g., Europe: https://openapi.tuyaeu.com)"
      },
      "username": {
        "title": "Username",
        "type": "string",
        "required": true,
        "description": "Tuya account email or username"
      },
      "password": {
        "title": "Password",
        "type": "string",
        "required": true,
        "description": "Password for Tuya account"
      },
      "appSchema": {
        "title": "App Schema",
        "type": "string",
        "required": true,
        "description": "Tuya App Schema (e.g., tuyaSmart, smartlife)"
      },
      "telegramBotToken": {
        "title": "Telegram Bot Token",
        "type": "string",
        "required": false,
        "description": "Telegram Bot Token for push notifications"
      },
      "pushed": {
        "type": "object",
        "properties": {
          "appKey": {
            "title": "App Key",
            "type": "string",
            "required": false
          },
          "appSecret": {
            "title": "App Secret",
            "type": "string",
            "required": false
          },
          "channelAlias": {
            "title": "Channel Alias",
            "type": "string",
            "required": false
          }
        }
      },
      "laundryDevices": {
        "title": "Laundry Devices",
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "name": {
              "title": "Name",
              "type": "string",
              "required": false,
              "description": "Device name, used for logging"
            },
            "id": {
              "title": "Tuya Device ID",
              "type": "string",
              "required": false
            },
            "key": {
              "title": "Tuya Device Key",
              "type": "string",
              "required": false
            },
            "powerValueId": {
              "title": "Power Value ID",
              "type": "string",
              "required": false,
              "description": "Property ID of the DPS return that represents current power value"
            },
            "startValue": {
              "title": "Start Value",
              "type": "number",
              "required": false,
              "description": "Expected power value when device started the cycle"
            },
            "startDuration": {
              "title": "Start Duration",
              "type": "number",
              "required": false,
              "description": "Duration in seconds that start value needs to hold until device is considered to be active."
            },
            "endValue": {
              "title": "End Value",
              "type": "number",
              "required": false,
              "description": "Expected power value when device finished the cycle"
            },
            "endDuration": {
              "title": "End Duration",
              "type": "number",
              "required": false,
              "description": "Duration in seconds that end value needs to hold until device is considered to be inactive."
            },
            "startMessage": {
              "title": "Start Message",
              "type": "string",
              "required": false,
              "description": "Optional push message when device starts the cycle",
              "default": "Washing started..."
            },
            "endMessage": {
              "title": "End Message",
              "type": "string",
              "required": false,
              "description": "Push message when device ends the cycle",
              "default": "Washing finished!"
            },
            "exposeStateSwitch": {
              "title": "Expose State Switch",
              "type": "boolean",
              "required": false,
              "description": "Creates dummy switch that will indicate current device status, useful for extra automation",
              "default": false
            }
          }
        }
      }
    }
  },
  "form": null,
  "display": null
}